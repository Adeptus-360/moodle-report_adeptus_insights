{{!
    @template   report_adeptus_insights/support_error

    Support error page template displaying error messages with options
    to view tickets or create new support requests.

    @package    report_adeptus_insights
    @copyright  2026 Adeptus 360 <info@adeptus360.com>
    @license    http://www.gnu.org/copyleft/gpl.html GNU GPL v3 or later
}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="{{wwwroot}}/report/adeptus_insights/styles/support.css">

<div class="adeptus-support-container">
    <!-- Header Banner -->
    <div class="adeptus-page-header-banner">
        <div class="adeptus-page-header-content">
            <h1 class="adeptus-page-header-title">
                <i class="fa fa-exclamation-triangle adeptus-page-header-icon"></i>
                {{#str}}error, report_adeptus_insights{{/str}}
            </h1>
            <p class="adeptus-page-header-subtitle">{{#str}}error_generic, report_adeptus_insights{{/str}}</p>
        </div>
        <div class="adeptus-page-header-actions">
            <a href="{{wwwroot}}/report/adeptus_insights/support.php" class="btn btn-light">
                <i class="fa fa-arrow-left"></i> {{#str}}back_to_tickets, report_adeptus_insights{{/str}}
            </a>
        </div>
    </div>

    <div class="container-fluid mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fa fa-exclamation-circle fa-4x text-danger mb-4"></i>
                        <h4 class="text-danger">{{error_message}}</h4>
                        <p class="text-muted">{{#str}}error_try_again, report_adeptus_insights{{/str}}</p>
                        <div class="mt-4">
                            <a href="{{wwwroot}}/report/adeptus_insights/support.php" class="btn btn-primary">
                                <i class="fa fa-ticket-alt"></i> {{#str}}view_tickets, report_adeptus_insights{{/str}}
                            </a>
                            <a href="{{wwwroot}}/report/adeptus_insights/support.php?action=new" class="btn btn-outline-primary ml-2">
                                <i class="fa fa-plus"></i> {{#str}}new_ticket, report_adeptus_insights{{/str}}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
