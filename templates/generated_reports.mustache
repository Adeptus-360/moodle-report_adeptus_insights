            // Include reexecution=1 to skip eligibility check (this is a saved report being viewed)
            var formData = 'reportid=' + encodeURIComponent(cachedReport.name) + '&sesskey=' + M.cfg.sesskey + '&reexecution=1';

            // Add saved parameters if available
            if (cachedReport.parameters && typeof cachedReport.parameters === 'object') {
