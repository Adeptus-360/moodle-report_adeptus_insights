         */
        deleteReport: function(slug, source, reportName) {
            var self = this;

            // Show loading state
            Swal.fire({
                title: STRINGS.deletingReport,
                text: STRINGS.deletingReportWait,
                allowOutsideClick: false,
                allowEscapeKey: false,
