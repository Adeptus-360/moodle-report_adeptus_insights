}

.adeptus-info-box {
    background: #e3f2fd;
    border: 1px solid #2196f3;
    color: #1976d2;
    padding: 15px;
    border-radius: 6px;
    margin-bottom: 20px;
    font-weight: 500;
}

.adeptus-site-exists {
