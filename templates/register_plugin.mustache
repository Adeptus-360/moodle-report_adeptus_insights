<script>
document.addEventListener('DOMContentLoaded', function() {
    // Localized strings
    var STRINGS = {
        siteName: '{{#str}}site_name_label, report_adeptus_insights{{/str}}',
        siteUrl: '{{#str}}site_url_label, report_adeptus_insights{{/str}}',
        administratorName: '{{#str}}administrator_name, report_adeptus_insights{{/str}}',
        administratorEmail: '{{#str}}administrator_email, report_adeptus_insights{{/str}}',
        moodleVersion: '{{#str}}moodle_version, report_adeptus_insights{{/str}}',
        phpVersion: '{{#str}}php_version, report_adeptus_insights{{/str}}',
        pluginVersion: '{{#str}}plugin_version, report_adeptus_insights{{/str}}',
        missingFieldsMessage: '{{#str}}missing_fields_message, report_adeptus_insights{{/str}}',
        registrationDisabled: '{{#str}}registration_disabled, report_adeptus_insights{{/str}}',
        registerPlugin: '{{#str}}register_plugin, report_adeptus_insights{{/str}}',
        registering: '{{#str}}registering, report_adeptus_insights{{/str}}'
    };

    const form = document.getElementById('registration-form');

    // Only run validation if form exists (not registered)
    if (form) {
        const submitBtn = document.getElementById('register-btn');
        const loadingOverlay = document.getElementById('loading-overlay');
        const validationError = document.getElementById('validation-error');
        const validationMessage = document.getElementById('validation-message');

        // Required field validation
        const requiredFields = [
            { id: 'site_name', name: STRINGS.siteName, value: '{{site_name}}' },
            { id: 'site_url', name: STRINGS.siteUrl, value: '{{site_url}}' },
            { id: 'admin_name', name: STRINGS.administratorName, value: '{{admin_name}}' },
            { id: 'admin_email', name: STRINGS.administratorEmail, value: '{{admin_email}}' },
            { id: 'moodle_version', name: STRINGS.moodleVersion, value: '{{moodle_version}}' },
            { id: 'php_version', name: STRINGS.phpVersion, value: '{{php_version}}' },
            { id: 'plugin_version', name: STRINGS.pluginVersion, value: '{{plugin_version}}' }
        ];

        function validateFields() {
            const missingFields = [];

            requiredFields.forEach(field => {
                const value = field.value.trim();
                if (!value || value === '' || value === 'undefined' || value === 'null') {
                    missingFields.push(field.name);
                }
            });

            if (missingFields.length > 0) {
                // Show validation error
                validationError.style.display = 'block';
                validationMessage.innerHTML = STRINGS.missingFieldsMessage.replace('{fields}', '<strong>' + missingFields.join(', ') + '</strong>');

                // Disable submit button
                submitBtn.disabled = true;
                submitBtn.style.opacity = '0.5';
                submitBtn.style.cursor = 'not-allowed';
                submitBtn.innerHTML = '<i class="fa fa-ban"></i> ' + STRINGS.registrationDisabled;

                return false;
            } else {
                // Hide validation error
                validationError.style.display = 'none';

                // Enable submit button
                submitBtn.disabled = false;
                submitBtn.style.opacity = '1';
                submitBtn.style.cursor = 'pointer';
                submitBtn.innerHTML = '<i class="fa fa-check"></i> ' + STRINGS.registerPlugin;

                return true;
            }
        }

        // Run validation on page load
        validateFields();

        form.addEventListener('submit', function(e) {
            // Validate before submitting
            if (!validateFields()) {
                e.preventDefault();
                return false;
            }

            // Show loading overlay
            loadingOverlay.style.display = 'block';
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> ' + STRINGS.registering;

            // Form will submit normally
        });
    }
});
</script>
