<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('registration-form');
    
    // Only run validation if form exists (not registered)
    if (form) {
        const submitBtn = document.getElementById('register-btn');
        const loadingOverlay = document.getElementById('loading-overlay');
        const validationError = document.getElementById('validation-error');
        const validationMessage = document.getElementById('validation-message');
        
        // Required field validation
        const requiredFields = [
            { id: 'site_name', name: 'Site Name', value: '{{site_name}}' },
            { id: 'site_url', name: 'Site URL', value: '{{site_url}}' },
            { id: 'admin_name', name: 'Administrator Name', value: '{{admin_name}}' },
            { id: 'admin_email', name: 'Administrator Email', value: '{{admin_email}}' },
            { id: 'moodle_version', name: 'Moodle Version', value: '{{moodle_version}}' },
            { id: 'php_version', name: 'PHP Version', value: '{{php_version}}' },
            { id: 'plugin_version', name: 'Plugin Version', value: '{{plugin_version}}' }
        ];
        
        function validateFields() {
            const missingFields = [];
            
            requiredFields.forEach(field => {
                const value = field.value.trim();
                if (!value || value === '' || value === 'undefined' || value === 'null') {
                    missingFields.push(field.name);
                }
            });
            
            if (missingFields.length > 0) {
                // Show validation error
                validationError.style.display = 'block';
                validationMessage.innerHTML = `The following required information is missing: <strong>${missingFields.join(', ')}</strong>. Please contact your system administrator to ensure these Moodle configuration values are properly set before registering the plugin.`;
                
                // Disable submit button
                submitBtn.disabled = true;
                submitBtn.style.opacity = '0.5';
                submitBtn.style.cursor = 'not-allowed';
                submitBtn.innerHTML = '<i class="fa fa-ban"></i> Registration Disabled';
                
                return false;
            } else {
                // Hide validation error
                validationError.style.display = 'none';
                
                // Enable submit button
                submitBtn.disabled = false;
                submitBtn.style.opacity = '1';
                submitBtn.style.cursor = 'pointer';
                submitBtn.innerHTML = '<i class="fa fa-check"></i> Register Plugin';
                
                return true;
            }
        }
        
        // Run validation on page load
        validateFields();
        
        form.addEventListener('submit', function(e) {
            // Validate before submitting
            if (!validateFields()) {
                e.preventDefault();
                return false;
            }
            
            // Show loading overlay
            loadingOverlay.style.display = 'block';
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Registering...';
            
            // Form will submit normally
        });
    }
});
</script> 