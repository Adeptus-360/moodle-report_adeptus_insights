                    <!-- Chat Interface -->
                    <div class="col-md-8">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">AI Report Assistant</h5>
                                <div class="btn-group">
                                    <button class="btn btn-primary" id="create-new-chat">
                                        <i class="fa fa-plus"></i> New Chat
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-0 position-relative">
                                <!-- Chat Messages -->
                                <div id="chat-container" class="chat-container fade-in"></div>
                                <!-- MCQ Container -->
                                <div id="mcq-container" class="mcq-container"></div>
