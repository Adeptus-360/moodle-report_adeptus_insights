{{!
    @template   report_adeptus_insights/subscription
    @package    report_adeptus_insights
    @copyright  2026 Adeptus 360 <info@adeptus360.com>
    @license    http://www.gnu.org/copyleft/gpl.html GNU GPL v3 or later

    Subscription management template providing a modern, beautiful, responsive interface
    for viewing and managing subscription plans, usage analytics, and billing.

    Example context (json):
    {
        "user_fullname": "Admin User",
        "config": {"wwwroot": "https://example.com"},
        "current_subscription": {"status": "active", "is_active": true}
    }
}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

{{#js}}
require(
    ['core/notification', 'report_adeptus_insights/subscription'],
    function(Notification, Subscription) {
        try {
            Subscription.init({});
        } catch (error) {
            Notification.exception(error);
        }
    }
);
{{/js}}

<div class="adeptus-subscription-container" id="subscription-container"{{#current_subscription}} data-subscription='{"status":"{{status}}","is_active":{{is_active}},"is_cancelled":{{is_cancelled}},"has_payment_issues":{{has_payment_issues}},"should_disable_api_access":{{should_disable_api_access}},"status_message":"{{status_message}}","status_details":{}}'{{/current_subscription}}>
    <!-- Header Section -->
    <div class="adeptus-subscription-header">
        <div class="adeptus-subscription-header-content">
            <h1 class="adeptus-subscription-title">
                <i class="fa fa-credit-card adeptus-subscription-icon"></i>
                {{#str}}subscription_management, report_adeptus_insights{{/str}}
            </h1>
            <p class="adeptus-subscription-subtitle">{{#str}}manage_billing_subtitle, report_adeptus_insights{{/str}}</p>
        </div>
        <div class="adeptus-subscription-header-actions">
            <a class="btn btn-primary adeptus-back-btn" href="{{config.wwwroot}}/report/adeptus_insights/index.php">
                <i class="fa fa-arrow-left"></i> {{#str}}back_to_dashboard, report_adeptus_insights{{/str}}
            </a>
            <div class="adeptus-subscription-user-info">
                <span class="adeptus-user-welcome">{{#str}}welcome_user, report_adeptus_insights, {{user_fullname}}{{/str}}</span>
            </div>
        </div>
    </div>

    <!-- Current Usage Analytics Cards -->
    <div class="adeptus-usage-analytics-section">
        <div class="adeptus-analytics-grid">
            <div class="adeptus-analytics-card">
                <div class="adeptus-analytics-header">
                    <div class="adeptus-analytics-icon">
                        <i class="fa fa-code"></i>
                    </div>
                    <div class="adeptus-analytics-title">
                        <h3>{{#str}}ai_tokens, report_adeptus_insights{{/str}}</h3>
                        <p>{{#str}}monthly_usage_limit, report_adeptus_insights{{/str}}</p>
                    </div>
                </div>
                <div class="adeptus-analytics-details">
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}monthly_limit_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value total numeric">{{#current_subscription}}{{tokens_limit_formatted}}{{/current_subscription}}{{^current_subscription}}50K{{/current_subscription}}</span>
                    </div>
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}used_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value used numeric">{{#current_subscription}}{{tokens_used_formatted}}{{/current_subscription}}{{^current_subscription}}0{{/current_subscription}}</span>
                    </div>
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}remaining_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value remaining numeric">{{#current_subscription}}{{tokens_remaining_formatted}}{{/current_subscription}}{{^current_subscription}}50K{{/current_subscription}}</span>
                    </div>
                    {{#current_subscription}}
                    <div class="adeptus-analytics-progress">
                        <div class="adeptus-progress-bar">
                            <div class="adeptus-progress-fill" data-width="{{tokens_usage_percent}}"></div>
                        </div>
                    </div>
                    {{/current_subscription}}
                </div>
            </div>

            <div class="adeptus-analytics-card">
                <div class="adeptus-analytics-header">
                    <div class="adeptus-analytics-icon">
                        <i class="fa fa-file-text-o"></i>
                    </div>
                    <div class="adeptus-analytics-title">
                        <h3>{{#str}}reports_exports, report_adeptus_insights{{/str}}</h3>
                        <p>{{#str}}monthly_generation_remaining, report_adeptus_insights{{/str}}</p>
                    </div>
                </div>
                <div class="adeptus-analytics-details">
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}monthly_exports_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value total numeric">{{#current_subscription}}{{exports_remaining}}{{/current_subscription}}{{^current_subscription}}0{{/current_subscription}}</span>
                    </div>
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}generated_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value used numeric">{{#current_subscription}}{{reports_total}}{{/current_subscription}}{{^current_subscription}}0{{/current_subscription}}</span>
                    </div>
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}exports_left_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value remaining numeric">{{#current_subscription}}{{exports_remaining}}{{/current_subscription}}{{^current_subscription}}0{{/current_subscription}}</span>
                    </div>
                    {{#current_subscription}}
                    <div class="adeptus-analytics-progress">
                        <div class="adeptus-progress-bar">
                            <div class="adeptus-progress-fill" data-width="{{#usage}}{{reports_generated_this_month}}{{/usage}}{{^usage}}0{{/usage}}"></div>
                        </div>
                    </div>
                    {{/current_subscription}}
                </div>
            </div>

            <div class="adeptus-analytics-card">
                <div class="adeptus-analytics-header">
                    <div class="adeptus-analytics-icon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <div class="adeptus-analytics-title">
                        <h3>{{#str}}billing_period, report_adeptus_insights{{/str}}</h3>
                        <p>{{#str}}current_next_billing, report_adeptus_insights{{/str}}</p>
                    </div>
                </div>
                <div class="adeptus-analytics-details">
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}period_start_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value total">{{#current_subscription}}{{current_period_start}}{{/current_subscription}}{{^current_subscription}}{{#str}}n_a, report_adeptus_insights{{/str}}{{/current_subscription}}</span>
                    </div>
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}period_end_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value used">{{#current_subscription}}{{current_period_end}}{{/current_subscription}}{{^current_subscription}}{{#str}}n_a, report_adeptus_insights{{/str}}{{/current_subscription}}</span>
                    </div>
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}next_billing_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value remaining">{{#current_subscription}}{{#next_billing}}{{next_billing}}{{/next_billing}}{{^next_billing}}{{#str}}n_a, report_adeptus_insights{{/str}}{{/next_billing}}{{/current_subscription}}{{^current_subscription}}{{#str}}n_a, report_adeptus_insights{{/str}}{{/current_subscription}}</span>
                    </div>
                    {{#current_subscription}}
                    <div class="adeptus-analytics-info">
                        <span class="adeptus-info-text">{{#is_trial}}Trial active until {{trial_ends_at}}{{/is_trial}}{{^is_trial}}Billing cycle active{{/is_trial}}</span>
                    </div>
                    {{/current_subscription}}
                </div>
            </div>

            <div class="adeptus-analytics-card">
                <div class="adeptus-analytics-header">
                    <div class="adeptus-analytics-icon">
                        <i class="fa fa-credit-card"></i>
                    </div>
                    <div class="adeptus-analytics-title">
                        <h3>{{#str}}subscription_label, report_adeptus_insights{{/str}}</h3>
                        <p>{{#str}}current_plan_status, report_adeptus_insights{{/str}}</p>
                    </div>
                </div>
                <div class="adeptus-analytics-details">
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}plan_name_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value total">{{#current_subscription}}{{plan_name}}{{/current_subscription}}{{^current_subscription}}{{#str}}no_plan, report_adeptus_insights{{/str}}{{/current_subscription}}</span>
                    </div>
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}status_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value used adeptus-status-{{#current_subscription}}{{status}}{{/current_subscription}}{{^current_subscription}}inactive{{/current_subscription}}">{{#current_subscription}}{{status}}{{/current_subscription}}{{^current_subscription}}{{#str}}inactive, report_adeptus_insights{{/str}}{{/current_subscription}}</span>
                    </div>
                    <div class="adeptus-detail-row">
                        <span class="adeptus-detail-label">{{#str}}price_label, report_adeptus_insights{{/str}}</span>
                        <span class="adeptus-detail-value remaining currency">{{#current_subscription}}{{price}} {{billing_cycle}}{{/current_subscription}}{{^current_subscription}}{{#str}}free, report_adeptus_insights{{/str}}{{/current_subscription}}</span>
                    </div>
                    {{#current_subscription}}
                    <div class="adeptus-analytics-status">
                        <span class="adeptus-status-badge adeptus-status-{{status}}">{{status_message}}</span>
                        {{#is_trial}}
                        <span class="adeptus-trial-badge">Trial until {{trial_ends_at}}</span>
                        {{/is_trial}}
                    </div>
                    {{/current_subscription}}
                </div>
            </div>
        </div>
    </div>

    <!-- Current Subscription Status -->
    {{#current_subscription}}
    <div class="adeptus-subscription-status-section">
        <div class="adeptus-status-card adeptus-current-plan adeptus-status-{{status}}{{#is_free_plan}} adeptus-status-free{{/is_free_plan}}">
            <div class="adeptus-status-header">
                <h3>
                    {{#is_active}}
                        <i class="fa fa-check-circle adeptus-status-icon-active"></i> {{#str}}current_plan_details, report_adeptus_insights{{/str}}
                    {{/is_active}}
                    {{^is_active}}
                        {{#is_cancelled}}
                            <i class="fa fa-times-circle adeptus-status-icon-cancelled"></i> {{#str}}cancelled_plan_details, report_adeptus_insights{{/str}}
                        {{/is_cancelled}}
                        {{^is_cancelled}}
                            {{#has_payment_issues}}
                                <i class="fa fa-exclamation-triangle adeptus-status-icon-payment-issue"></i> {{#str}}payment_issue, report_adeptus_insights{{/str}}
                            {{/has_payment_issues}}
                            {{^has_payment_issues}}
                                <i class="fa fa-info-circle adeptus-status-icon-inactive"></i> {{#str}}inactive_plan_details, report_adeptus_insights{{/str}}
                            {{/has_payment_issues}}
                        {{/is_cancelled}}
                    {{/is_active}}
                </h3>
            </div>
            <div class="adeptus-status-content">
                <div class="adeptus-plan-details">
                    <h4>{{#plan_name}}{{plan_name}}{{/plan_name}}{{^plan_name}}-{{/plan_name}}</h4>
                    <p class="adeptus-plan-price">{{price}} <span class="adeptus-billing-cycle">{{billing_cycle}}</span></p>
                    <div class="adeptus-plan-status">
                        <span class="adeptus-status-badge adeptus-status-{{status}}">{{status_message}}</span>
                    </div>
                </div>

                <!-- Status-specific information -->
                {{#is_cancelled}}
                <div class="adeptus-cancellation-info">
                    <div class="adeptus-info-item">
                        <i class="fa fa-calendar-times-o"></i>
                        <span>Cancelled: {{cancellation_info.cancelled_at_formatted}}</span>
                    </div>
                    {{#cancel_at_period_end}}
                    <div class="adeptus-info-item">
                        <i class="fa fa-clock-o"></i>
                        <span>Access ends: {{cancellation_info.access_ends_at_formatted}}</span>
                    </div>
                    {{/cancel_at_period_end}}
                    {{#status_details.can_renew}}
                    <div class="adeptus-renewal-prompt">
                        <i class="fa fa-refresh"></i>
                        <span>{{#str}}renew_subscription_prompt, report_adeptus_insights{{/str}}</span>
                    </div>
                    {{/status_details.can_renew}}
                </div>
                {{/is_cancelled}}

                {{#has_payment_issues}}
                <div class="adeptus-payment-issue-info">
                    <div class="adeptus-info-item">
                        <i class="fa fa-exclamation-triangle"></i>
                        <span>Payment failed: {{payment_info.last_payment_failed_at_formatted}}</span>
                    </div>
                    <div class="adeptus-info-item">
                        <i class="fa fa-credit-card"></i>
                        <span>{{#str}}update_payment_method_prompt, report_adeptus_insights{{/str}}</span>
                    </div>
                </div>
                {{/has_payment_issues}}

                {{#is_trial}}
                <div class="adeptus-trial-notice">
                    <i class="fa fa-clock-o"></i>
                    <span>Trial active until {{trial_ends_at}}</span>
                </div>
                {{/is_trial}}

                <div class="adeptus-usage-details">
                    <div class="adeptus-usage-item">
                        <i class="fa fa-bar-chart"></i>
                        <span>{{reports_total}} / {{reports_limit}} Reports Generated</span>
                    </div>
                    <div class="adeptus-usage-item">
                        <i class="fa fa-code"></i>
                        <span>{{tokens_remaining_formatted}} AI Tokens Remaining</span>
                    </div>
                    <div class="adeptus-usage-item">
                        <i class="fa fa-file-text-o"></i>
                        <span>{{exports_remaining}} Exports Remaining</span>
                    </div>
                    {{#next_billing}}
                    <div class="adeptus-usage-item">
                        <i class="fa fa-calendar"></i>
                        <span>Next billing: {{next_billing}}</span>
                    </div>
                    {{/next_billing}}
                </div>

                <!-- Report limit policy notice -->
                <div class="adeptus-report-policy-notice">
                    <i class="fa fa-info-circle"></i>
                    <span><strong>{{#str}}report_policy, report_adeptus_insights{{/str}}</strong> {{#str}}report_policy_message, report_adeptus_insights{{/str}}</span>
                </div>

                <!-- Access restrictions notice -->
                {{#should_disable_api_access}}
                <div class="adeptus-access-restriction-notice">
                    <i class="fa fa-lock"></i>
                    <span>{{#str}}api_access_restricted, report_adeptus_insights{{/str}}</span>
                </div>
                {{/should_disable_api_access}}
            </div>

            <div class="adeptus-status-actions">
                {{#is_active}}
                    {{#is_free_plan}}
                    <button class="btn btn-success btn-upgrade-plan" id="upgrade-plan">
                        <i class="fa fa-arrow-up"></i> {{#str}}upgrade_plan, report_adeptus_insights{{/str}}
                    </button>
                    {{/is_free_plan}}
                    {{^is_free_plan}}
                    <button class="btn btn-primary btn-modify-subscription" id="modify-subscription">
                        <i class="fa fa-cog"></i> {{#str}}manage_subscription, report_adeptus_insights{{/str}}
                    </button>
                    <button class="btn btn-outline-danger btn-cancel-subscription" id="cancel-subscription">
                        <i class="fa fa-times"></i> {{#str}}cancel_subscription, report_adeptus_insights{{/str}}
                    </button>
                    {{/is_free_plan}}
                {{/is_active}}
                {{^is_active}}
                    {{#is_cancelled}}
                        {{#status_details.can_renew}}
                        <button class="btn btn-success" id="renew-subscription">
                            <i class="fa fa-refresh"></i> {{#str}}renew_subscription, report_adeptus_insights{{/str}}
                        </button>
                        {{/status_details.can_renew}}
                        <button class="btn btn-outline-primary btn-view-plans" id="view-plans">
                            <i class="fa fa-eye"></i> {{#str}}view_plans, report_adeptus_insights{{/str}}
                        </button>
                    {{/is_cancelled}}
                    {{^is_cancelled}}
                        {{#has_payment_issues}}
                        <button class="btn btn-warning" id="update-payment">
                            <i class="fa fa-credit-card"></i> {{#str}}update_payment_method, report_adeptus_insights{{/str}}
                        </button>
                        <button class="btn btn-outline-primary btn-view-plans" id="view-plans">
                            <i class="fa fa-eye"></i> {{#str}}view_plans, report_adeptus_insights{{/str}}
                        </button>
                        {{/has_payment_issues}}
                        {{^has_payment_issues}}
                        <button class="btn btn-outline-primary btn-view-plans" id="view-plans">
                            <i class="fa fa-eye"></i> {{#str}}view_plans, report_adeptus_insights{{/str}}
                        </button>
                        {{/has_payment_issues}}
                    {{/is_cancelled}}
                {{/is_active}}
            </div>
        </div>
    </div>
    {{/current_subscription}}

</div>
